- model_class = Expense.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:amount)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:tags)
      %th= model_class.human_attribute_name(:date)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @expenses.each do |expense|
      %tr
        %td= link_to expense.title, expense_path(expense)
        %td= expense.amount
        %td= expense.description
        %td= expense.tags
        %td= expense.date
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_path(expense), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), expense_path(expense), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_expense_path, :class => 'btn btn-primary'
