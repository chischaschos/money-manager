- model_class = @expense.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @expense.title

%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @expense.amount

%p
  %strong= model_class.human_attribute_name(:tags) + ':'
  %br
  = @expense.tags

%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @expense.description

%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @expense.date

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), expenses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_path(@expense), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), expense_path(@expense), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
